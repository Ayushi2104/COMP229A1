      /* For Text Animation */
      .title-word {
        animation: color-animation 4s linear infinite;
      }

      .title-word-1 {
        --color-1: #000000;
        --color-2: #feb2f7;
        --color-3: #e64dee;
      }

      .title-word-2 {
        --color-1: #e64dee;
        --color-2: #000000;
        --color-3: #feb2f7;
      }

      .title-word-3 {
        --color-1: #feb2f7;
        --color-2: #e64dee;
        --color-3: #000000;
      }

      @keyframes color-animation {
        0% {
          color: var(--color-1);
        }
        32% {
          color: var(--color-1);
        }
        33% {
          color: var(--color-2);
        }
        65% {
          color: var(--color-2);
        }
        66% {
          color: var(--color-3);
        }
        99% {
          color: var(--color-3);
        }
        100% {
          color: var(--color-1);
        }
      }
    </style>
